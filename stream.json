{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "description": "Streamgraph showing intentional homicide cases by state from 2014 to 2022 with color-blind friendly palette, larger and wider view.",
  "width": 900,
  "height": 600,
  "background": null,
  "data": {
    "url": "https://raw.githubusercontent.com/veyroxie/dv2/refs/heads/main/intentional%20homicide.csv",
    "format": {
      "type": "csv"
    }
  },
  "mark": {
    "type": "area",
    "interpolate": "monotone",
    "line": true
  },
  "encoding": {
    "x": {
      "field": "Year",
      "type": "ordinal",
      "axis": {
        "title": "Year",
        "labelColor": "white",
        "titleColor": "white",
        "grid": false
      }
    },
    "y": {
      "aggregate": "sum",
      "field": "Total Cases",
      "stack": "center",
      "axis": {
        "title": "Number of Cases",
        "labelColor": "white",
        "titleColor": "white",
        "grid": false
      }
    },
    "color": {
      "field": "State",
      "type": "nominal",
      "scale": {
        "scheme": "tableau10"
      },
      "legend": {
        "title": "State",
        "labelColor": "white",
        "titleColor": "white"
      }
    },
    "tooltip": [
      {
        "field": "Year",
        "type": "ordinal",
        "title": "Year"
      },
      {
        "field": "State",
        "type": "nominal",
        "title": "State"
      },
      {
        "field": "Total Cases",
        "type": "quantitative",
        "title": "Total Cases"
      }
    ]
  }
}
